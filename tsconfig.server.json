{
    "compilerOptions": {
        "outDir": "./dist-server",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true
    },
    "include": ["./server"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
